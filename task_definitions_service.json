[
  {
    "name": "esgi_cloud_front_end",
    "image": "${image}",
    "cpu": 1024,
    "memory": 2048,
    "essential": true,
    "portMappings": [
      {
        "containerPort": ${app_port},
        "hostPort": ${app_port}
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/esgi-cloud-front_end",
        "awslogs-region": "eu-west-3",
        "awslogs-stream-prefix": "fargate",
        "mode": "non-blocking"
      }
    },
    "environment": [
      {
        "name": "EVENT_SERVICE_URL",
        "value": "${event_service_url}"
      },
      {
        "name": "EVENT_SERVICE_ARN",
        "value": "${event_service_arn}"
      }
    ]
  }
]